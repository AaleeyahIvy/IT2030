@model Class

@{
    ViewData["Title"] = $"{ViewBag.Operation} Class";
}

<h1 class="display-4">@ViewBag.Operation Class</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Teacher"></label>
        <select asp-for="TeacherId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Teachers,"TeacherId","FullName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Day"></label>
        <select asp-for="DayId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Days,"DayId","Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="MilitaryTime"></label>
        <input asp-for="MilitaryTime" class="form-control" />
    </div>

    @if (ViewBag.Operation == "Edit")
    {
        <input type="hidden" asp-for="ClassId" />
    }

    <button type="submit" class="btn btn-dark">@ViewBag.Operation</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>