@model Author

@{
    ViewData["Title"] = " | Author";
}

<h1>Author</h1>

<table class="table table-bordered table-sm">
    <thead>
        <tr class="thead-dark">
            <th>@Model.FullName</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @foreach (var ba in Model.BookAuthors)
                {
                    <p>
                        <a asp-action="Details" asp-controller="Book"
                           asp-route-id="@ba.BookId"
                           asp-route-slug="@ba.Book.Title.Slug()">
                            @ba.Book.Title
                        </a>
                    </p>
                }
            </td>
        </tr>
    </tbody>
</table>