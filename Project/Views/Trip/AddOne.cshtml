 @model Trip

@{ 
    string title = ViewBag.Action + "Page 1";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="AddOne" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <br>
        <input asp-for="Destination" />
    </div>
    <div class="form-group">
        <label asp-for="Start">Start Date</label>
        <br>
        <input asp-for="Start" />
    </div>
    <div class="form-group">
        <label asp-for="End">End Date</label>
        <br>
        <input asp-for="End" />
    </div>
    <div class="form-group">
        <label asp-for="Accommodations">Accomodations</label>
        <br>
        <input asp-for="Accommodations" />
    </div>
    <div class="form-group">
        <label asp-for="ToDo1">Things to do</label>
        <br>
        <input asp-for="ToDo1" />
    </div>
    <div>
        <button type="submit" class="btn btn-outline-success">Save</button>
        <a asp-action="Cancel" class="btn btn-outline-danger">Cancel</a>
    </div>
</form>
