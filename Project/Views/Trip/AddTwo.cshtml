@model TripViewModel

@{
    ViewBag.Title = "Add Trip 2";
    ViewBag.SubHeader = $"Add info for { ViewBag.Accommodations }";
}


<form asp-action="AddTwo">
    <input type="hidden" asp-for="Page" />

    <div class="form-group">
        <label asp-for="Trip.AccommodationPhone">Phone Number</label>
        <br>
        <input asp-for="Trip.AccommodationPhone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Trip.AccommodationEmail">Email Address</label>
        <br>
        <input asp-for="Trip.AccommodationEmail" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-outline-success">Save</button>
        <a asp-action="Cancel" class="btn btn-outline-danger">Cancel</a>
    </div>
</form>
